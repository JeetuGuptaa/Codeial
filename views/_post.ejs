            <button type = 'submit'>Reply</button>
        </form>
        
        <ul id="comment-container-<%= post._id %>">
            <% for(comment of post.comments){ %> 

                    <%- include('./_comment')%>
                
            <% } %>
        </ul>
    <%}%>
