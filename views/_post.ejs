
<li id ="<%= post.id %>">
    <p>
        <small>User : <%= post.user.name %></small>
        <br>
        <%= post.content %>
        <%if(locals.user && user.id == post.user.id){%>
            <a href ="/post/destroy/<%=post.id%>" class ="delete-post">Delete</a>
        <%}%>
    </p>
    
    <%if(locals.user){%>
        <form action="/comment/create" method="POST" class="create-comment">
